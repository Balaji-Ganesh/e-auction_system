<html>
    <head>
        <title>Display | <%= auction.auctionTitle%></title>      <!--Later via JS, add the auction's title name...-->
        <link href="../styles/displayAuction.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    </head>
    <body>
        <header>
            <p> Header section </p>
            <a href="auctions/"><i class="far fa-hand-point-left"></i> Back to Explore Auctions</a>
        </header>
        <section>
            <div class="auction-card">
                <div class="auction-header">
                    <div class="auction-title">
                        <h2><%= auction.auctionTitle %></h2>
                        <div class="auction-categories">
                            <% auction.categories.forEach(category => { %>
                                <span class="category">category</span>
                            <%})%>
                        </div>
                    </div>
                    <div class="auction-meta">
                        <table>
                            <tr>
                                <td><p class="key">Status</p></td>      <td><p class="value"> <%= auction.auctionStatus %> </p></td>
                            </tr>
                            <tr>
                                <td><p class="key">Open to</p></td>     <td><p class="value">  <%=  auction.auctionSecurity %> </p></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="auction-body">
                    <div class="leftPane">
                        <div class="product-snapshots">
                            <!-- <img src="hindustan-motors-ambassador-10203.jpg" alt="auction-image"> -->
                            <img src="<%=  auction.auctionImagesURL %>" alt="auction-image">
                        </div>
                        <div class="hosting-details">
                            <p><i>An auction by</p></i></p>
                            <div class="auctioneer">
                                <img src="../resources/man.png" alt="auctioneer">
                                <div class="details">
                                    <span class="host-title">Hindustan Motors Ltd.</span><br/>
                                    <a href="#ViewAuctioneerDetails">View details....</a>
                                </div>
                            </div>
                        </div>
                        <div class="features">
                            <span>Features <br/>(down arrow)</span>
                        </div>
                    </div>
                    <div class="right-pane">
                        <div class="basic-details">
                            <p class="section-header">Basic Details</p>
                            <hr/>
                            <table>
                                <tr>
                                    <td class="key">Opening Bid Price</td>  
                                    <td class="value price"><i class="fas fa-coins"></i>₹ <%=  auction.bidPrice %>/-</td>
                                </tr>
                                <tr>
                                    <td class="key">Published on</td>  
                                    <td class="value"><i class="far fa-calendar-alt"></i> <%=  auction.publishedOn %> </td>
                                </tr>
                                <tr>
                                    <td class="key">Launch on</td>  
                                    <td class="value"><i class="far fa-calendar-alt"></i> <%= auction.launchOn %> </td>
                                </tr>
                                <tr>
                                    <td class="key">Ends on</td>  
                                    <td class="value"><i class="far fa-calendar-alt"></i><%= auction.closingOn %></td>   
                                </tr>
                            </table>
                            <div class="bidding-details">
                                <p class="section-header">Bidding Details</p>
                                <hr/>
                                <table>
                                    <tr>
                                        <td class="key">Ends in</td>  
                                        <td class="value"><i class="fas fa-hourglass-half"></i>5 Days,  3 hours,  2minutes,  1sec</td>
                                    </tr>
                                    <tr>
                                        <td class="key">Other bidders</td>  
                                        <td class="value">
                                            <img src="../resources/woman.png" class="other-bidders" alt="other-bidder">
                                            <img src="../resources/man.png" class="other-bidders" alt="other-bidder">
                                            <span>View their bids</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Current Highest Bid</td>  
                                        <td class="value price" ><i class="fas fa-coins"></i>₹ <%= auction.highestBidAmount%>/-</td>   
                                    </tr>
                                    <tr>
                                        <td class="key">Your Bidding Price</td>
                                        <td class="value">
                                            <div class="user-bids">
                                                <form action="#">
                                                    <input type="number">
                                                    <input type="submit" value="Bid">
                                                </form>
                                                <!-- <span>Launch LIVE countdown..</span> -->
                                                <a href="goliveCountDown/<%= auction.slug %>">Launch LIVE countdown..</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            footer
        </footer>
    </body>
</html>

