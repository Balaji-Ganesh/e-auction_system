<html>
    <head>
        <title>Explore Auctions</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="../styles/header-styling.css" rel="stylesheet" type="text/css">
        <link href="../styles/footer-styles.css" rel="stylesheet" type="text/css">
    </head>
    <body>

        <!-- Header content-->
        <%- include('../header')%>

        <div class="container">
            <h1 class="mb-4 mt-4">Explore Auctions</h1>
            <a href="/auctions/new-auction" class="btn btn-success">New Auction</a>

            <% auctions.forEach(auction => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"> <%= auction.auctionTitle%> </h4>
                        <div class="card-text mb-2"> Status: <b><%= auction.auctionStatus%> </b> </div>
                        <div class="card-text mb-2"> An auction by: <b><%= %> </b> </div>
                        <a href="/auctions/<%= auction.slug %> " class="btn btn-info">Participate in  Auction</a>
                    </div>
                </div>
            <%}) %>
        </div>

        <!--footer content-->
        <%- include('../footer')%>

        <script src="../scripts/header-sticky-script.js" type="text/javascript"></script>

    </body>
</html>

