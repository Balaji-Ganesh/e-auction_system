<!DOCTYPE html>
<html>
<head>
	<title>Login | Register</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="test-styles.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"><!--for social media icons-->
</head>
<body>
  <div class="cont">
    <form class="form sign-in" action="/users/signIn" method="POST">
      <h2>Sign In</h2>
      <label>
        <span>Email Address</span>
        <input type="email" name="email">
      </label>
      <label>
        <span>Password</span>
        <input type="password" name="password">
      </label>
      <!-- <button class="submit" type="button">Sign In</button> -->
      <input type="submit" class="submit"value="Sign In"/>
      <p class="forgot-pass">Forgot Password ?</p>

      <div class="social-media">
        <ul>
            <li><a href="#"><i class="fa fa-facebook" ></i></a></li>
            <li><a href="#"><i class="fa fa-twitter" ></i></a></li>
            <li><a href="#"><i class="fa fa-google" ></i></a></li>
        </ul>
      </div>
    </form>

    <div class="sub-cont">
      <div class="img">
        <div class="img-text m-up">
          <h2>New here?</h2>
          <p>Sign up and discover great amount of new opportunities!</p>
        </div>
        <div class="img-text m-in">
          <h2>One of us?</h2>
          <p>If you already has an account, just sign in. We've missed you!</p>
        </div>
        <div class="img-btn">
          <span class="m-up">Sign Up</span>
          <span class="m-in">Sign In</span>
        </div>
      </div>
      <form class="form sign-up" action="/users/signUp" method="POST">
        <h2>Sign Up</h2>
        <table>
          <tr>
            <td>
              <label>
                <span>Firstname</span>
                <input type="text" name="firstname"required>
              </label>
            </td>
            <td>
              <label>
                <span>Lastname</span>
                <input type="text" name="lastname"required>
              </label>
            </td>
          </tr>

          <tr>
            <td>
              <label>
                <span>Email</span>
                <input type="email" name="email" required>
              </label>
              <label>
            </td>
            <td>
              <label>
                <span>Mobile</span>
                <input type="number" name="mobileNumber" required>
              </label>
            <label>
            </td>
          </tr>

          <tr>
            <td>
              <label>
                <span>Password</span>
                <input type="password" name="password" required>
              </label>
            </td>
            <td>
              <label>
                <span>Confirm Password</span>
                <input type="password" name="confirmPassword" required>
              </label>
            </td>
          </tr>

          <tr>
            <td>
              <label>
                <span>City</span>
                <input type="text" name="city" required>
              </label>
            </td>
            <td>
              <label>
                <span>State</span>
                <input type="text" name="state" required>
              </label>
            </td>
          </tr>

          <td>
            <label>
              <span>Country</span>
              <input type="text" name="country" required>
            </label>
          </td>
          <td>
            <label>
              <span>Zip Code</span>
              <input type="text" name="zipcode" required>
            </label>
          </td>
        </tr>
    

        </table>
        
        
        <input type="submit" class="submit" value="Sign Up"></button>
        <!-- <button type="button" class="submit">Sign Up Now</button> -->
    </form>
    </div>
  </div>
<script>
  document.querySelector('.img-btn').addEventListener('click', function()
  {
    document.querySelector('.cont').classList.toggle('s-signup')
  }
);
</script>
</body>
</html>
